<%= form_for :terza, url: url, method: method do |f| %>
  <div class="row">
    <div class="col-md-12">
      <% if @terza.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@terza.errors.count, "error") %> prohibited this Terza from being saved:</h2>

          <ul>
          <% @terza.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-3">
      <%= f.label :maschi %>
      <div class="form-group input-group">
        <%= f.number_field :maschi, class: "form-control" %>
        <% if method == 'patch' %>
          <span class="help-block"><i class="fa fa-info-circle"></i> Valore precedente = <%= @terza.maschi %> </span>
        <% end %>
      </div>
    </div>

    <div class="col-md-3">
      <%= f.label :femmine %>
      <div class="form-group input-group">
        <%= f.number_field :femmine, class: "form-control" %>
        <% if method == 'patch' %>
          <span class="help-block"><i class="fa fa-info-circle"></i> Valore precedente = <%= @terza.femmine %> </span>
        <% end %>
      </div>
    </div>
  </div>


	<div class="row">
    <div class="col-md-12">
      <%= link_to 'Back', :back, :class => 'btn btn-bricky' %>
      <%= f.submit 'Salva', :class => 'btn btn-success' %>
    </div>
  </div>



<% end %>