<% if @prima_conteggio.to_i > 0 %>
<div class="row">
	<div class="col-md-4">
		<div class="panel panel-default">
			<div class="panel-heading">
				<i class="fa fa-external-link-square"></i>
				Prima Rilevazione
			</div>
			<div class="panel-body">
				<div class="table-responsive">
					<div class="row">
						<div class="col-md-12 center">
							<h4>Ore 12:00 - Dati Affluenza</h4>
						</div>
					</div>

					<div class="row">
						<div class="col-md-12">Pervenuti <%= @prima_conteggio %> seggi su <%= @totale_seggi %></div>
					</div>
					<div class="row">
						<div class="col-md-12">
							<table class="table table-hover " id="tabella-uno">
								<thead>
									<tr>
										<th>--</th>
										<th>Maschi</th>
										<th>Femmine</th>
										<th>Totale</th>
										<th> % </th>
									</tr>
								</thead>
								<tbody>
									<tr>
										<td>Iscritti</td>
										<td><%= @votanti_iscritti_m %></td>
										<td><%= @votanti_iscritti_f %></td>
										<td><%= @votanti_iscritti %></td>
										<td>&nbsp;</td>
									</tr>
									<tr>
										<td>Votanti</td>
										<td><%= @prima_votanti_m %></td>
										<td><%= @prima_votanti_f %></td>
										<td><%= @prima_votanti_num %></td>
										<td><strong><%= number_to_percentage(@prima_votanti_perc, precision: 2) %></strong></td>
									</tr>								
								</tbody>
							</table>
						</div>
					</div>

					<% if @prima_conteggio < @totale_seggi %>
						<div class="row center text-danger">
							<div class="col-md-12">Dati Parziali</div>
						</div>
					<% end %>

				</div>
			</div>
		</div>
	</div>
